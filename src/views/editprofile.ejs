<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>AdminLTE | Edit Profile</title>
        <%- include('partials/head') %>

        <style>
    .edit-profile-card {
      max-width: 700px;
      margin: 50px auto;
    }
    label.error {
      color: red;
      font-size: 14px;
      margin-top: -8px;
      display: block;
    }
  </style>
    </head>

    <body class="hold-transition sidebar-mini layout-fixed">
        <div class="wrapper">

            <div class="content-wrapper">
                <section class="content">
                    <div class="container-fluid">
                        <div class="card edit-profile-card shadow">

                            <div class="card-header text-center bg-primary">
                                <h3 class="card-title text-white">Update Your
                                    Profile</h3>
                            </div>

                            <div class="card-body register-card-body">

                                <% if (typeof error !== 'undefined' && error) {
                                %>
                                <div
                                    class="alert alert-danger alert-dismissible fade show"
                                    role="alert">
                                    <%= error %>
                                    <button type="button" class="close"
                                        data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <% } %>

                                <% if (typeof success !== 'undefined' &&
                                success) { %>
                                <div
                                    class="alert alert-success alert-dismissible fade show"
                                    role="alert">
                                    <%= success %>
                                    <button type="button" class="close"
                                        data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <% } %>

                                <form action="/editprofile" method="POST"
                                    enctype="multipart/form-data"
                                    id="editProfileForm" novalidate>

                                    <!-- Name -->
                                    <div class="form-group">
                                        <label>Full Name</label>
                                        <div class="input-group">
                                            <input type="text"
                                                class="form-control" name="name"
                                                placeholder="Full Name"
                                                value="<%= name %>"
                                                required>
                                            <div class="input-group-append">
                                                <div
                                                    class="input-group-text"><span
                                                        class="fas fa-user"></span></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="form-group">
                                        <label>Email</label>
                                        <div class="input-group">
                                            <input type="email"
                                                class="form-control"
                                                name="email" placeholder="Email"
                                                value="<%= email %>"
                                                required>
                                            <div class="input-group-append">
                                                <div
                                                    class="input-group-text"><span
                                                        class="fas fa-envelope"></span></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Username -->
                                    <div class="form-group">
                                        <label>Username</label>
                                        <div class="input-group">
                                            <input type="text"
                                                class="form-control"
                                                name="username"
                                                placeholder="Username" required>
                                            <div class="input-group-append">
                                                <div
                                                    class="input-group-text"><span
                                                        class="fas fa-user-tag"></span></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Profile Image -->
                                    <div class="form-group">
                                        <label>Profile Image</label>
                                        <input type="file" name="image"
                                            class="form-control-file">
                                    </div>

                                    <!-- Address -->
                                    <div class="form-group">
                                        <label>Address</label>
                                        <textarea name="address"
                                            class="form-control"
                                            placeholder="Address"></textarea>
                                    </div>

                                    <!-- DOB -->
                                    <div class="form-group">
                                        <label>Date of Birth</label>
                                        <div class="input-group">
                                            <input type="date"
                                                class="form-control" name="dob"
                                                placeholder="Date of Birth">
                                            <div class="input-group-append">
                                                <div
                                                    class="input-group-text"><span
                                                        class="fas fa-calendar-alt"></span></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Gender -->
                                    <div class="form-group">
                                        <label>Gender</label><br>
                                        <div
                                            class="form-check form-check-inline">
                                            <input class="form-check-input"
                                                type="radio" name="gender"
                                                value="Male">
                                            <label
                                                class="form-check-label">Male</label>
                                        </div>
                                        <div
                                            class="form-check form-check-inline">
                                            <input class="form-check-input"
                                                type="radio" name="gender"
                                                value="Female">
                                            <label
                                                class="form-check-label">Female</label>
                                        </div>
                                        <div
                                            class="form-check form-check-inline">
                                            <input class="form-check-input"
                                                type="radio" name="gender"
                                                value="Other">
                                            <label
                                                class="form-check-label">Other</label>
                                        </div>
                                    </div>

                                    <!-- Phone -->
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        <div class="input-group">
                                            <input type="text"
                                                class="form-control"
                                                name="phone"
                                                placeholder="Phone Number">
                                            <div class="input-group-append">
                                                <div
                                                    class="input-group-text"><span
                                                        class="fas fa-phone"></span></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Hobby -->
                                    <div class="form-group">
                                        <label>Hobby</label>
                                        <div class="input-group">
                                            <input type="text"
                                                class="form-control"
                                                name="hobby"
                                                placeholder="Hobby">
                                            <div class="input-group-append">
                                                <div
                                                    class="input-group-text"><span
                                                        class="fas fa-heart"></span></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit -->
                                    <div class="form-group text-center mt-4">
                                        <button type="submit"
                                            class="btn btn-success btn-lg w-100">Save
                                            Changes</button>
                                    </div>
                                </form>

                                <div class="text-center">
                                    <a href="/index" class="text-muted">← Back
                                        to Home</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <%- include('partials/scripts') %>
    </body>
</html>
