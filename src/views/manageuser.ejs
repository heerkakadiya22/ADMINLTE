<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>AdminLTE | Manage Users</title>
        <%- include('partials/head') %>
        <script
            src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
 <link rel="stylesheet" href="/src/assets/css/style.css">
    </head>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <%- include('partials/sidebar', { name: name, image: image,
            csrfToken: csrfToken }) %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                 <%- include('partials/contentHeader', { pageTitle: pageTitle,
        breadcrumbs: breadcrumbs }) %>

                <!-- Main content -->
                <section class="content">
                    <div class="card">
                        <!-- <div
                            class="card-header d-flex flex-wrap justify-content-between align-items-center">
                            <h3 class="card-title mb-2 mb-md-0">
                                <a href="/manageuser"
                                    style="color: black;">All
                                    Registered
                                    Users</a></h3>

                                
                                <a href="/adduser"
                                    class="btn btn-primary mr-2 mb-2 mb-md-0" style=" margin-left: 75%;">
                                    <i class="nav-icon fas fa-user-plus"></i>
                                    Add User
                                </a>
                            </div> -->

                        <div class="card-body p-0">
                            <% if (success) { %>
                            <div
                                class="alert alert-success alert-dismissible fade show"
                                role="alert">
                                <%= success %>
                                <button type="button" class="close"
                                    data-dismiss="alert" aria-label="Close"
                                    onclick="this.parentElement.style.display='none'">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <% } %>

                            <table class="table table-striped" id="usersTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Profile</th>
                                        <th>Email / Phone</th>
                                        <th>Username</th>
                                        <th>DOB / Gender</th>
                                        <th>Hobby</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (user && user.length > 0) { %>
                                    <% user.forEach((user, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <div
                                                class="d-flex align-items-center">
                                                <img
                                                    src="/src/assets/image/uploads/<%= user.image %>"
                                                    class="img-circle elevation-2"
                                                    style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
                                                <div>
                                                    <strong><%= user.name
                                                        %></strong><br />
                                                   
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <strong><%= user.email
                                                %></strong><br />
                                            <small><%= user.phone_no || 'N/A'
                                                %></small>
                                        </td>
                                        <td><%= user.username || 'N/A' %></td>
                                        <td>
                                            <%= user.dob ? new
                                            Date(user.dob).toLocaleDateString()
                                            : 'N/A' %><br />
                                            <%= user.gender || 'N/A' %>
                                        </td>
                                        <td><%= user.hobby || 'N/A' %></td>
                                        <td>
                                            <a class="btn btn-info btn-sm"
                                                href="/edituser/<%= user.id %>">
                                                <i
                                                    class="fas fa-pencil-alt"></i>
                                                Edit
                                            </a>
                                            <button
                                                class="btn btn-danger btn-sm btn-delete"
                                                data-id="<%= user.id %>">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </button>

                                        </td>
                                    </tr>
                                    <% }); %>
                                    <% } else { %>
                                    <tr>
                                        <td colspan="8"
                                            class="text-center text-muted">No
                                            users found.</td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
</div>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <%- include('partials/scripts') %>
        <script>
document.addEventListener('DOMContentLoaded', function() {
  const deleteButtons = document.querySelectorAll('.btn-delete');

  deleteButtons.forEach(button => {
    button.addEventListener('click', function() {
      const userId = this.getAttribute('data-id');

      swal({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        buttons: ["Cancel", "Yes, delete it!"],
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {
          // Redirect to your Express delete route
          window.location.href = `/deleteuser/${userId}`;
        }
      });
    });
  });
});

$('#usersTable').DataTable({
  "paging": true,     
  "lengthChange": true,   
  "searching": true,      
  "ordering": false,      
  "info": true,           
  "autoWidth": false,
  "responsive": true,
    pageLength: 5, 
    lengthMenu: [ [5, 10, 25, 50], [5, 10, 25, 50] ],
    language: {
    lengthMenu: '_MENU_' ,
         searchPlaceholder: 'Search users...'
      },
dom:
  "<'d-flex align-items-center justify-content-between flex-wrap mb-2 mt-2'<'custom-title'><'d-flex align-items-center ml-auto' f l <'custom-adduser'>>>" +
  "rt" +
  "<'row'<'col-md-6'i><'col-md-6'p>>",
});

$('.custom-title').html('<h3 class="card-title m-3">All Registered Users</h3>');
$('.custom-adduser').html(`
  <a href="/adduser" class="btn btn-primary mr-3 mb-2">
    <i class="nav-icon fas fa-user-plus"></i> Add User
  </a>
`);
</script>
    </body>
</html>
