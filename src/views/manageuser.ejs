<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>AdminLTE | Manage Users</title>
        <%- include('partials/head') %>
        <script
            src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    </head>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <%- include('partials/sidebar', { name: name, image: image,
            csrfToken: csrfToken }) %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Users List</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a
                                            href="#">Home</a></li>
                                    <li class="breadcrumb-item active">Manage
                                        Users</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="card">
                        <div
                            class="card-header d-flex flex-wrap justify-content-between align-items-center">
                            <h3 class="card-title mb-2 mb-md-0">

                                <a href="/manageuser"
                                    style="color: black;">All
                                    Registered
                                    Users</a></h3>

                            <div class="d-flex flex-wrap align-items-center"
                                style="    margin-left: 49%;">

                                <form method="get" id="recordForm"
                                    style="margin-right: 2%;">
                                    <select name="limit" id="limit"
                                        class="form-control mr-2"
                                        onchange="document.getElementById('recordForm').submit();">
                                        <option value="5"
                                            <%=pagination.limit ==
                                            5 ? 'selected' : ''
                                            %>>5</option>
                                        <option value="10"
                                            <%=pagination.limit
                                            == 10 ? 'selected' : ''
                                            %>>10</option>
                                        <option value="20"
                                            <%=pagination.limit
                                            == 20 ? 'selected' : ''
                                            %>>20</option>
                                        <option value="50"
                                            <%=pagination.limit
                                            == 50 ? 'selected' : ''
                                            %>>50</option>
                                    </select>

                                    <% if (search) { %>
                                    <input type="hidden" name="search"
                                        value="<%= search %>">
                                    <% } %>
                                    <% if (pagination.page) { %>
                                    <input type="hidden" name="page"
                                        value="<%= pagination.page %>">
                                    <% } %>
                                </form>

                                <!-- Search Form -->
                                <form method="GET" action="/manageuser"
                                    class="form-inline mr-2 mb-2 mb-md-0">
                                    <div class="input-group">
                                        <input
                                            type="text"
                                            name="search"
                                            class="form-control"
                                            placeholder="Search"
                                            value="<%= search %>" />
                                        <div class="input-group-append">
                                            <button type="submit"
                                                class="btn btn-secondary">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>

                                <!-- Add User Button -->
                                <a href="/adduser"
                                    class="btn btn-primary mr-2 mb-2 mb-md-0">
                                    <i class="nav-icon fas fa-user-plus"></i>
                                    Add User
                                </a>

                                <!-- Collapse Button -->
                                <button type="button" class="btn btn-tool"
                                    data-card-widget="collapse"
                                    style="    margin-left: -2%;">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body p-0">
                            <% if (success) { %>
                            <div
                                class="alert alert-success alert-dismissible fade show"
                                role="alert">
                                <%= success %>
                                <button type="button" class="close"
                                    data-dismiss="alert" aria-label="Close"
                                    onclick="this.parentElement.style.display='none'">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <% } %>

                            <table class="table table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Profile</th>
                                        <th>Email / Phone</th>
                                        <th>Username</th>
                                        <th>Address</th>
                                        <th>DOB / Gender</th>
                                        <th>Hobby</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (user && user.length > 0) { %>
                                    <% user.forEach((user, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <div
                                                class="d-flex align-items-center">
                                                <img
                                                    src="/src/assets/image/uploads/<%= user.image %>"
                                                    class="img-circle elevation-2"
                                                    style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
                                                <div>
                                                    <strong><%= user.name
                                                        %></strong><br />
                                                    <small><%= user.id ? 'ID: '
                                                        + user.id : ''
                                                        %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <strong><%= user.email
                                                %></strong><br />
                                            <small><%= user.phone_no || 'N/A'
                                                %></small>
                                        </td>
                                        <td><%= user.username || 'N/A' %></td>
                                        <td><%= user.address || 'N/A' %></td>
                                        <td>
                                            <%= user.dob ? new
                                            Date(user.dob).toLocaleDateString()
                                            : 'N/A' %><br />
                                            <%= user.gender || 'N/A' %>
                                        </td>
                                        <td><%= user.hobby || 'N/A' %></td>
                                        <td>
                                            <a class="btn btn-info btn-sm"
                                                href="/edituser/<%= user.id %>">
                                                <i
                                                    class="fas fa-pencil-alt"></i>
                                                Edit
                                            </a>
                                            <button
                                                class="btn btn-danger btn-sm btn-delete"
                                                data-id="<%= user.id %>">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </button>

                                        </td>
                                    </tr>
                                    <% }); %>
                                    <% } else { %>
                                    <tr>
                                        <td colspan="8"
                                            class="text-center text-muted">No
                                            users found.</td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <nav aria-label="Page navigation"
                                style="margin-top: 10px; margin-left: 43%;">
                                <ul class="pagination">
                                    <% if (pagination.page > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link"
                                            href="/manageuser?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                            Previous
                                        </a>
                                    </li>
                                    <% } else { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                    <% } %>

                                    <% for (let i = 1; i <=
                                    pagination.totalPages; i++) { %>
                                    <li
                                        class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="/manageuser?page=<%= i %>&limit=<%= pagination.limit %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                    <% if (pagination.page <
                                    pagination.totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link"
                                            href="/manageuser?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                            Next
                                        </a>
                                    </li>
                                    <% } else { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                    <% } %>
                                </ul>
                            </nav>

                        </div>
                    </div>
                </section>
            </div>
        </div>

        <%- include('partials/scripts') %>
        <script>
document.addEventListener('DOMContentLoaded', function() {
  const deleteButtons = document.querySelectorAll('.btn-delete');

  deleteButtons.forEach(button => {
    button.addEventListener('click', function() {
      const userId = this.getAttribute('data-id');

      swal({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        buttons: ["Cancel", "Yes, delete it!"],
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {
          // Redirect to your Express delete route
          window.location.href = `/deleteuser/${userId}`;
        }
      });
    });
  });
});
</script>
    </body>
</html>
