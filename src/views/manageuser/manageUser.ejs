<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>AdminLTE | Manage Users</title>
        <%- include('partials/head') %>
        <script
            src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
 <link rel="stylesheet" href="/src/assets/css/style.css">
    </head>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <%- include('partials/sidebar', { name: name, image: image, roleId: roleId,
            csrfToken: csrfToken }) %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                 <%- include('partials/contentHeader', { pageTitle: pageTitle,
        breadcrumbs: breadcrumbs }) %>

                <!-- Main content -->
                <section class="content">
                    <div class="card">
                  

                        <div class="card-body p-0">
                        

                            <table class="table table-striped" id="usersTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Profile</th>
                                        <th>Email / Phone</th>
                                        <th>Username</th>
                                        <th>DOB / Gender</th>
                                        <th>Hobby</th>
                                        <th>Role</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                  <tbody id="usersTableBody">
              <tr><td colspan="8" class="text-center text-muted">Loading users...</td></tr>
            </tbody>
                            </table>
</div>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <%- include('partials/scripts') %>
        <script src="/src/assets/jquery/ajaxJquery.js"></script>
    </body>
</html>
